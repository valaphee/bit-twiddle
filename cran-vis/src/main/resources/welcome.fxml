<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<VBox maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0" prefWidth="600.0" styleClass="background" stylesheets="@dark_theme.css" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1">
    <children>
        <HBox VBox.vgrow="ALWAYS">
            <children>
                <ListView/>
                <Pane fx:id="welcomePane" HBox.hgrow="ALWAYS"/>
            </children>
        </HBox>
        <ButtonBar>
            <buttons>
                <Button mnemonicParsing="false" onAction="#connectButtonAction" text="Connect"/>
                <Button mnemonicParsing="false" onAction="#exitButtonAction" text="Exit"/>
            </buttons>
        </ButtonBar>
    </children>
</VBox>
